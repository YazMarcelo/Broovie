<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUserSimilarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Similarity"
                android:textColor="#FFFFFF"
                android:background="@color/list_view_color"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewFilmesUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txtMatrixFactorization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Matrix Factorization"
                android:textColor="#FFFFFF"
                android:background="@color/list_view_color"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewFilmesMF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>