<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_black_gray">

    <WebView
        android:id="@+id/filme_player"
        android:layout_width="match_parent"
        android:layout_height="217dp">

    </WebView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray"
        android:textSize="20dp"
        android:text="Vingadores - Guerra Infinita" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:numStars="5"
            android:stepSize="1"
            android:theme="@style/RatingBar"/>

        <Button
            android:id="@+id/button"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:foreground="@drawable/ic_share_black_24dp"
            style="@style/ButtonStyle"
            android:onClick="callToast"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_sinopse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sinopse:"
        android:textColor="#fff"/>


</LinearLayout>